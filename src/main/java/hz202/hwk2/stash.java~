        block newblock = new block(cmd.charAt(0), Character.getNumericValue(cmd.charAt(1))+i);
        blocks.add(newblock);
      }
      else if(cmd.charAt(2) == 'V'){
        block newblock = new block(cmd.charAt(0)+i, Character.getNumericValue(cmd.charAt(1)));
        blocks.add(newblock);
      }
      }*/
  }

  public ArrayList<block> getBlocks(){
    return blocks;
  }

  public char getColor() {
    return color;
  }
}
